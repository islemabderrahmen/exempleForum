{% extends 'back_office/base.html.twig' %}
{% block page_title %}
    Ajouter Administrateur
{% endblock %}
{% block breadcrumb %}
    {{ parent() }}
    <li class="active">Ajouter administrateur</li>
{% endblock breadcrumb %}

{% block body %}
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Ajouter Administrateur</h3>
        </div>
        <div class="panel-body">
            <div class="col-lg-6">

                {{ form_start(form,{'attr': {'class': 'with-loading'}}) }}
                {{ form_row(form.utilisateur.prenom) }}
                {{ form_row(form.utilisateur.nom) }}
                {{ form_row(form.utilisateur.email) }}
                {{ form_row(form.utilisateur.plainPassword.first) }}
                {{ form_row(form.utilisateur.plainPassword.second) }}
                {{ form_row(form.mobile) }}

                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save"></i> Enregistrer
                </button>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}